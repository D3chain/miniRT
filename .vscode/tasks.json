{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g3",
                "${workspaceFolder}/source/*.c",
                "${workspaceFolder}/source/color/*.c",
                "${workspaceFolder}/source/error/*.c",
                "${workspaceFolder}/source/app/*.c",
				"${workspaceFolder}/source/load/*.c",
				"${workspaceFolder}/source/math/*.c",
				"${workspaceFolder}/source/run/*.c",
				"${workspaceFolder}/source/run/bvh/*.c",
				"${workspaceFolder}/source/run/ray/*.c",
				"${workspaceFolder}/source/run/event/*.c",
				"${workspaceFolder}/source/run/event/update/*.c",
				"${workspaceFolder}/source/run/render/*.c",
				"${workspaceFolder}/source/setup/*.c",
				"${workspaceFolder}/source/print/*.c",
                "${workspaceFolder}/source/wrapper/*.c",
                "${workspaceFolder}/libft/libft.a",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "${workspaceFolder}/libft/include",
                "-I",
                "${workspaceFolder}/mlx",
                "-L",
                "${workspaceFolder}/mlx",
                "-lmlx",
                "-lX11",
                "-lXext",
                "-lm",
                "-o",
                "miniRT"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cc build active file",
            "command": "/usr/bin/cc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}